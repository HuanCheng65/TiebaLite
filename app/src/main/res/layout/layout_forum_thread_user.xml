<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forum_item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/forum_item_user_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription" />

    <com.huanchengfly.tieba.widgets.theme.TintTextView
        android:textStyle="bold"
        android:id="@+id/forum_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/forum_item_user_avatar"
        android:maxLines="1"
        app:tint="@color/default_color_text"
        android:textSize="@dimen/text_size_user_name"
        tools:text="幻了个城fly" />

    <com.huanchengfly.tieba.widgets.theme.TintTextView
        android:id="@+id/forum_item_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forum_item_user_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/forum_item_user_avatar"
        android:maxLines="1"
        android:textSize="@dimen/text_size_user_small"
        app:tint="@color/default_color_text_secondary"
        tools:text="刚刚" />

    <com.huanchengfly.tieba.widgets.theme.TintImageView
        android:id="@+id/dislike"
        android:visibility="gone"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_round_close"
        app:tint="@color/default_color_text_secondary"
        android:padding="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</RelativeLayout>