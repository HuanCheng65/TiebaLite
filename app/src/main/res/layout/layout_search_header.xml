<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="UselessParent">
        <com.huanchengfly.tieba.widgets.theme.TintSuperTextView
            app:centerTextColor="@color/default_color_text"
            app:sBackgroundDrawableRes="@color/transparent"
            android:id="@+id/search_order"
            app:sDividerLineType="none"
            app:sRightIconRes="@drawable/ic_keyboard_arrow_down"
            app:rightIconTint="@color/default_color_text"
            app:sCenterTextString="@string/search_order_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp" />
        <com.huanchengfly.tieba.widgets.theme.TintSuperTextView
            app:centerTextColor="@color/default_color_text"
            app:sBackgroundDrawableRes="@color/transparent"
            android:id="@+id/search_filter"
            app:sDividerLineType="none"
            app:sRightIconRes="@drawable/ic_keyboard_arrow_down"
            app:rightIconTint="@color/default_color_text"
            app:sCenterTextString="@string/search_order_only_thread"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp" />
    </LinearLayout>
</LinearLayout>