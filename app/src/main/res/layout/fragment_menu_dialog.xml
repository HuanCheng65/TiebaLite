<?xml version="1.0" encoding="utf-8"?>
<com.huanchengfly.tieba.widgets.theme.TintRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_round"
    app:backgroundTint="@color/default_color_background"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.huanchengfly.tieba.widgets.theme.TintTextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp"
        app:tint="@color/default_color_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.huanchengfly.tieba.widgets.theme.TintNavigationView
        app:elevation="0dp"
        app:itemTextAppearance="@style/TextAppearance.Bold"
        android:layout_below="@id/title_text_view"
        app:itemTextTint="@color/default_color_text"
        app:itemIconTint="@color/default_color_primary"
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.huanchengfly.tieba.widgets.theme.TintRelativeLayout>