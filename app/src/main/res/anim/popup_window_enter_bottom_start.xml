<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="150"
    android:shareInterpolator="@android:interpolator/accelerate_decelerate">
    <scale
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="0%"
        android:pivotY="100%"
        android:toXScale="1"
        android:toYScale="1" />

    <alpha
        android:fromAlpha="0.1"
        android:toAlpha="1.0" />
</set>